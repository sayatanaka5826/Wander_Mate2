$('.message').append('<%= j(render "user/chats/chat", chat: @chat) %>');
$('input[type=text]').val("")

document.querySelector('.message-text-area').value = '';

var latestMessageId = 'chat_<%= @chat.id %>';
var latestMessageElement = document.getElementById(latestMessageId);
if (latestMessageElement) {
  latestMessageElement.scrollIntoView({ behavior: 'smooth' });
  latestMessageElement.focus();
}