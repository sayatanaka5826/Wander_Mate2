<div class="cotainer text-color">
  <div class="text-center mt-3">
    <%= render "user/shared/error_messages", resource: @user %>
  </div>

  <%= form_with model: @user, url: user_registration_path do |f| %>
  <table class="d-flex justify-content-center" style="width: 80%; margin: auto; margin-top: 70px;">
    <tbody>
      <tr>
        <td class="text-center" style="font-weight: bold; font-size: 30px;">
          会員登録 <i class="fa-solid fa-user-plus"></i>
        </td>
      </tr>
      <tr>
        <td>
          <div style="margin-top: 30px;">
            <strong>ユーザーネーム</strong> <span class="badge badge-danger">必須</span>
          </div>
          <div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            <strong>メールアドレス</strong> <span class="badge badge-danger">必須</span>
          </div>
          <div>
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            <strong>パスワード</strong> <span class="badge badge-danger">必須</span>
          </div>
          <div>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            <strong>パスワード(確認用)</strong> <span class="badge badge-danger">必須</span>
          </div>
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-4 text-center">
            <%= f.submit "会員登録", class: "btn btn-dark sign-up-button", style: "border-radius: 25px;" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <% end %>

  <div class="row d-flex justify-content-center mt-4 ">
    <%= render "user/shared/links" %>
  </div>

</div>





