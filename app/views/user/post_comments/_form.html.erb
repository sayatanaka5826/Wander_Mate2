<div class="container">
  <% if user_signed_in? %>
    <div class="row justify-content-left">
      <%= form_with model: [post, post_comment], local: false do |f| %>
      <div class="d-flex align-items-center mt-4 mb-3" style="width: 100%;">
        <%= f.text_area :body, cols: 110, placeholder: "コメントを入力", class: "form-control" %>
        <%= f.submit "送信", class: "btn btn-secondary comment-send-button ml-2", style: "border-radius: 25px;" %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>